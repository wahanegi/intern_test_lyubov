<div class="container main-wrapper">
  <div class="row justify-content-center">
    <div class="col-xl-10">
      <p class="text-muted text-center mt-3 mb-0">Don't have an account?
        <%= link_to 'Register', new_user_registration_path, class: "text-primary ml-1", method: :post %>
        or 
        <%= link_to 'Log In', new_user_session_path, class: "text-primary ml-1", method: :post %>
      </p>
    </div>
  </div>
</div>

<h1 class="text-center">Tweets</h1>
<div class="row gx-5">
  <% @tweets.each do |tweet| %>
    <div class="card">    
      <div class="card-text">
        @<%=tweet.user.nikname%>
      </div>
      <div class="card-text">
        <%= tweet.body %>
      </div>
       <div class="tweetfooter">
        <i class="bi bi-chat-left"></i>
        <i class="bi bi-repeat"></i>
        <i class="bi bi-heart"></i>
        <i class="bi bi-arrow-bar-up"></i>
      </div>
    </div>    
  <br/>
  <% end %>
</div>